		<param name="transparency" type="radio" default="transparent" label="JW_PLG_AV_VIDEO_PLAYER_TRANSPARENCY" description="JW_PLG_AV_VIDEO_PLAYER_TRANSPARENCY_DESC">
			<option value="opaque">JW_PLG_AV_NO</option>
			<option value="transparent">JW_PLG_AV_YES</option>
		</param>
		<param name="background" type="text" default="#010101" size="8" label="JW_PLG_AV_VIDEO_PLAYER_BACKGROUND_COLOR" description="JW_PLG_AV_VIDEO_PLAYER_BACKGROUND_COLOR_DESC" />
