			<option value="local">JW_PLG_AV_LOCAL</option>
			<option value="cdn">JW_PLG_AV_CDN</option>
		</param>
		<param name="jwPlayerAPIKey" type="text" default="" size="40" label="JW_PLG_AV_JWPLAYER_APIKEY" description="JW_PLG_AV_JWPLAYER_APIKEY_DESC" />
